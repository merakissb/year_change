<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "p-3 mb-3") do |f| %>
        <%= render 'shared/errors' %>
        <div>
          <h1 class="text-center mt-3">sign up</h1>
        </div>
        <div class="form-group row mb-2">
          <%= f.label :email, class: "text-dark" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded" %>
        </div>
        <div class="form-group row mb-2">
          <%= f.label :password, class: "text-dark" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded" %>
        </div>
        <div class="form-group row mb-2">
          <%= f.label :password_confirmation, class: "text-dark" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded" %>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
        <div class="text-center">
          <%= render "devise/shared/links"%>
        </div>
      <% end %>
    </div>
  </div>
</div>