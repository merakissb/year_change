<div class="container">
  <div class="row justify-content-center">
      <div class="col-8">
      <%= form_with(model: @excel_file, local: true, class: "p-3 mb-3") do |form| %>
      <%= render 'shared/errors', resource: @excel_file %>
      <div class="form-group row mb-2">
        <%= form.label :colegio, class: "col-2 col-form-label text-dark"  %>
        <div class="col-8">
          <%= form.text_field :school, class: "form-control rounded" %>
        </div>
      </div>
      <div class="form-group row mb-2">
        <%= form.label :rbd, class: "col-2 col-form-label text-dark" %>
        <div class="col-8">
          <%= form.text_field :rbd, class: "form-control rounded" %>
        </div>
      </div>
      <div class="form-group row mb-2">
        <%= form.label :file, class: "col-2 col-form-label text-dark" %>
        <div class="col-8">
          <%= form.file_field :file %>
        </div>
      </div>
      <div class="form-group row mb-2">
          <%= form.submit class: "btn btn-outline-dark" %>
      </div>
      <% end %>
    </div>
  </div>
</div>